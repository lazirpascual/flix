<%
# from the controller, we fetch a movie record and assign it to the @movie instance variable
# we use the form_with helper method to create a form that will submit a POST request to the /movies/:id URL
# it knows whether or not to submit a POST or PATCH request based on whether or not the movie record exists in the database
%>

<%= form_with(model: movie) do |f| %>
  <%= render "shared/errors", object: movie %>
  
  <%= f.label :title %>
  <%= f.text_field :title, autofocus: true %>

  <%= f.label :description %>
  <%= f.text_area :description, rows: 10 %>

  <%= f.label :rating %>
  <%= f.select :rating, Movie::RATINGS, prompt: "Pick one" %>

  <%= f.label :released_on %>
  <%= f.date_select :released_on, {}, {class: "date"} %>

  <%= f.label :total_gross %>
  <%= f.number_field :total_gross %>

  <%= f.label :director %>
  <%= f.text_field :director %>

  <%= f.label :duration %>
  <%= f.text_field :duration %>

  <%= f.label :image_file_name %>
  <%= f.text_field :image_file_name %>

  <%= f.submit %>
<% end %>